# ============================================================================
# LLM API Keys (REQUIRED - Bot won't start without this)
# ============================================================================

# DeepSeek API Key (Primary LLM)
# Get your key from: https://platform.deepseek.com/
# This is REQUIRED for AI decision making
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here

# Optional: OpenAI API Key (Fallback LLM)
# Get your key from: https://platform.openai.com/
# OPENAI_API_KEY=sk-your-openai-key-here

# Optional: Anthropic API Key (Secondary Fallback)
# Get your key from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ============================================================================
# Server Configuration
# ============================================================================

# RO Server Name - Controls server-specific status effect tables
# Different RO servers use different status effect IDs
# 
# Options:
#   - bRO: Brazilian Ragnarok Online
#   - kRO: Korean Ragnarok Online
#   - iRO: International Ragnarok Online
#   - twRO: Taiwan Ragnarok Online
#   - tRO: Thailand Ragnarok Online
#   - jRO: Japan Ragnarok Online
#   - Custom server names (if you provide corresponding tables)
#
# The system will look for: tables/{RO_SERVER_NAME}/STATUS_id_handle.txt
# Falls back to: tables/STATUS_id_handle.txt if server-specific not found
RO_SERVER_NAME=bRO

# ============================================================================
# Database Configuration
# ============================================================================

# Database connection string
# 
# SQLite (Default - for single-user development):
DATABASE_URL=sqlite:///data/openkore_ai.db
#
# PostgreSQL (Recommended for production/multi-bot):
# DATABASE_URL=postgresql://username:password@localhost:5432/openkore_ai
#
# MySQL/MariaDB:
# DATABASE_URL=mysql://username:password@localhost:3306/openkore_ai

# ============================================================================
# Port Configuration
# ============================================================================

# AI Service HTTP Server Port
# OpenKore plugins connect to this port for AI intelligence
# Default: 9902
AI_SERVICE_PORT=9902

# Macro Hot-Reload WebSocket Port
# Used for automatic macro deployment to OpenKore
# Default: 8765
MACRO_HOTRELOAD_PORT=8765

# ============================================================================
# Logging Configuration (Optional)
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
# LOG_LEVEL=INFO

# Log file location
# Default: logs/openkore_ai.log
# LOG_FILE=logs/openkore_ai.log

# ============================================================================
# ML/AI Configuration (Optional)
# ============================================================================

# Enable online learning (model improves with bot experience)
# Default: true
# ONLINE_LEARNING_ENABLED=true

# Cold start mode (for new characters without training data)
# Options: balanced, aggressive, conservative
# Default: balanced
# COLD_START_MODE=balanced

# ============================================================================
# Combat Intelligence (Optional)
# ============================================================================

# Threat assessment strictness
# Options: strict, moderate, relaxed
# Default: moderate
# THREAT_ASSESSMENT_MODE=moderate

# Auto-kiting for ranged jobs
# Default: true
# AUTO_KITING_ENABLED=true

# ============================================================================
# Social Features (Optional)
# ============================================================================

# Enable AI-powered chat responses
# Default: true
# AI_CHAT_ENABLED=true

# Personality profile
# Options: friendly, professional, humorous, quiet
# Default: friendly
# PERSONALITY_PROFILE=friendly

# ============================================================================
# Autonomous Healing (Optional)
# ============================================================================

# Enable self-healing system
# Default: true
# AUTONOMOUS_HEALING_ENABLED=true

# Auto-restart on critical errors
# Default: true
# AUTO_RESTART_ON_ERROR=true

# Safe mode (require validation before applying fixes)
# Default: true
# SAFE_MODE=true

# ============================================================================
# Advanced Configuration (Optional)
# ============================================================================

# CrewAI memory backend
# Options: local, chromadb, redis
# Default: local
# MEMORY_BACKEND=local

# Maximum memory retention (days)
# Default: 30
# MEMORY_RETENTION_DAYS=30

# Macro generation rate limit (per minute)
# Default: 10
# MACRO_GENERATION_RATE_LIMIT=10

# ============================================================================
# Development/Debug (Optional)
# ============================================================================

# Enable debug mode
# Default: false
# DEBUG_MODE=false

# Skip AI service initialization (for testing)
# Default: false
# SKIP_AI_INIT=false

# Mock LLM responses (for testing without API keys)
# Default: false
# MOCK_LLM=false

